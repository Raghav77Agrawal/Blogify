<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs') %>
<body>
    
    <%- include('./partials/nav.ejs') %>
    <div class="container mt-4">
      <div class="row row-cols-4">
    <% blogs.forEach(element => { %>
      <div class="col mt-4">
        <div class="card" style="width: 20rem;">
            <img src= <%= element.coverImageUrl %> style = "height:30vh;" class="card-img-top">
            <div class="card-body">
              <h5 class="card-title"><%= element.title %></h5>
              <p class="card-text"><%= element.body.slice(0,20) + '...'%></p>
              <a href="/blog/<%=element._id%>" class="btn btn-primary">View</a>
            </div>
          </div>
        </div>
    <% }) %>
  </div>
  </div>
    
    <%- include('./partials/scripts.ejs') %>
</body>

</html>